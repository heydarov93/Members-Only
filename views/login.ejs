<!-- Header -->
<%- include("partials/header", {title: "Login"}) %>
<!-- Header END -->
<main id="main">
  <article class="container-sm p-sm-5">
    <!-- Form -->
    <h2 class="text-center mb-5">Log In</h2>
    <div class="d-flex flex-column align-items-center">
      <form class="w-100 c-w-md-50 d-flex flex-column gap-4" action="/auth/login" method="post">
        <div>
          <label for="email" class="form-label">Email <sup>*</sup></label>
          <input type="email" id="email" class="form-control" name="email" value="<%= locals.formValues?.email %>" placeholder="e.g. test.example@outlook.com" required>
          <%- include("partials/form-error-msg", {input_name: "email"})%>
        </div>
        <div>
          <label for="password" class="form-label">Password <sup>*</sup></label>
          <input type="password" id="password" class="form-control" name="password" value="<%= locals.formValues?.password %>" placeholder="Enter your password" required>
          <%- include("partials/form-error-msg", {input_name: "password"})%>
        </div>

        <div>
          <button type="submit" class="btn btn-primary d-flex gap-2"><i class="bi bi-box-arrow-in-right"></i>Log In</button>
        </div>
      </form>
      <div class="mt-4  w-100 c-w-md-50">
        <p>Don't have an account? <a href="/auth/signup" class="text-decoration-none">Sign up here</a>.</p>
      </div>
    </div>
  </article>
</main>

<!-- Footer -->
<%- include("partials/footer") %>
<!-- Footer END -->